<%= simple_form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="profile-page-box">
    <div class="card profile-card">
      <h4 class="card-header">Edit Profile</h4>
      <div class="card-block">
        <div class="form-inputs">
          <%= f.input :username %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
        </div>
        <div class="field">
          <%= f.label :date_of_birth %>
          <%= f.text_field :date_of_birth, 'data-provide' => 'datepicker', 'data-date-autoclose' => 'true', 'data-date-end-date' => '0d', 'data-date-format' => 'dd-mm-yyyy', 'data-date-max-view-mode' => '3', 'data-date-assume-nearby-year' => 'true' %><br/>
        </div>
        <div class="form-inputs">
          <%= f.input :gender %>
        </div>
        <div class="field">
          <%= f.label :avatar_src, label: 'Upload Avatar' %><br>
          <%= f.file_field :avatar_src, :class => 'btn btn-large btn-outline-success app-button profile-button', "data-input" => false %>
        </div>
        <div class="actions">
          <%= f.button :submit, :class => 'btn btn-large btn-outline-success app-button profile-button' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
