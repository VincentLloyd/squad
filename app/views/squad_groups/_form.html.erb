<%= simple_form_for(@squad_group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :max_members %>
    <%= f.input :price %>
    <%= f.collection_select :exercise_types_id, ExerciseType.all.map {|exercise| exercise},:id,:name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
