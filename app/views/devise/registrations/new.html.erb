<%= render 'layouts/navbar' %>

<div class="profile-page-box">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="card profile-card">
      <h4 class="card-header">User Signup</h4>
      <div class="card-block">

        <div class="form-inputs">
          <%= f.input :email, autofocus: true %>
          <% if @minimum_password_length %>
            <% min_length = @minimum_password_length.to_s + ' characters minimum' %>
          <%end%>
            <%= f.input :password, input_html: { autocomplete: "off", name: "user[password]", id: "user_password", placeholder: min_length } %>
          <%= f.input :password_confirmation, input_html: { autocomplete: "off" } %>
        </div>

        <div class="actions">
          <%= f.button :submit, "Sign up", class: 'btn btn-large btn-outline-success app-button profile-button' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
