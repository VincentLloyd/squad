<div class="lunch-box">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="sign-in-box">
      <div class="title">
        <h1 id="title">SQUAD</h1>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "enter email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "enter password"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex-center-row">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, :class => 'devise-label' %>
        </div>
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <div id="forgot-label">
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          </div>
        <% end -%>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign in", :class => 'btn btn-primary my-2 my-sm-0' %>
      </div>
    </div>

    <div class="join-box">
      <div class="flex-center-col">
        <div>
          <h2 id="sub-title">Not a member?</h2>
        </div>
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= button_to "Join us", new_registration_path(resource_name), :class => 'btn btn-info my-2 my-sm-0' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
